BoxLayout:
    orientation: 'vertical'

    ScrollView:
        id: data_scroll_view
        size_hint_y: 0.7
        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            id: data_output_grid
            cols: 1
            size_hint_y: None
            height: self.minimum_height

    Button:
        text: 'Read Data'
        size_hint_y: 0.1
        on_press: app.start_reading()

    TextInput:
        id: write_input
        hint_text: 'Enter data to send'
        size_hint_y: 0.1

    Button:
        text: 'Send Data'
        size_hint_y: 0.1
        on_press: app.send_data()

    Button:
        text: 'Quit'
        size_hint_y: 0.1
        on_press: app.stop_app()
